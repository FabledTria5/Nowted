<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Nowted" parent="android:Theme.Material.Light.NoActionBar">
        <item name="windowSplashScreenBackground">@color/primary_background</item>
        <item name="android:windowBackground">@color/primary_background</item>
    </style>

    <style name="SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_background</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Nowted</item>
    </style>
</resources>